<div>
  <h2 class="black">
    Log in
  </h2>
  <%= form_for(:session, url: login_path) do |f| %>

    <div>
      <%= f.label :email %>
    </div>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Log in" %>
  <% end %>

  <div class="white">New user? <%= link_to "Sign up now!", signup_path, class:"btn_anchor" %></div>
</div>
