
<%= render 'homes/error_message.html.erb' %>

<h2 class="black">Please enter new thread name.</h2>
<%= form_with(url: "/", method: "post" ,  local: true ) do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag(:thread_name) %>
  </div>
  <div class="black">
    You can choose multiple categories.
  </div>
  <div>
    <div>
      <%= label_tag :Sport %>
      <%= check_box_tag :cat_sport %>
    </div>
    <div>
      <%= label_tag :Economy %>
      <%= check_box_tag :cat_economy %>
    </div>
    <div>
      <%= label_tag :Music %>
      <%= check_box_tag :cat_music %>
    </div>
    <div>
      <%= label_tag :Movie %>
      <%= check_box_tag :cat_movie %>
    </div>
    <div>
      <%= label_tag :Science %>
      <%= check_box_tag :cat_science %>
    </div>

  </div>
  <%= submit_tag("create") %>

<% end %>
